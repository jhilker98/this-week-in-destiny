---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  @font-face {
    font-family: "Niveau Grotesk";
    src: url("/fonts/Niveau-Grotesk-Light.woff") format("woff");
    font-weight: 300;
  }
  @font-face {
    font-family: "Niveau Grotesk";
    src: url("/fonts/Niveau-Grotesk-Regular.woff") format("woff");
    font-weight: 400;
  }
  @font-face {
    font-family: "Niveau Grotesk";
    src: url("/fonts/Niveau-Grotesk-Medium.woff") format("woff");
    font-weight: 500;
  }
  @font-face {
    font-family: "Niveau Grotesk";
    src: url("/fonts/Niveau-Grotesk-Bold.woff") format("woff");
    font-weight: 700;
  }
  @font-face {
    font-family: "Niveau Grotesk";
    src: url("/fonts/Niveau-Grotesk-Black.woff") format("woff");
    font-weight: 900;
  }
</style>
